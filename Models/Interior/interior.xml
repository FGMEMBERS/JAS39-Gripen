<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>siege</object-name>
    <object-name>toursiege</object-name>

    <!-- Objets transparents -->
    <object-name>intcockpit</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intcockpit</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intcockpit</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/JAS39-Gripen/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/JAS39-Gripen/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.869 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.433 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntCanopy</name>
    <object-name>inttourverriere</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntCanopy</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 90 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.510 </x1-m>
      <y1-m> -0.408 </y1-m>
      <z1-m> -0.204 </z1-m>
      <x2-m> -1.711 </x2-m>
      <y2-m> -0.336 </y2-m>
      <z2-m> -0.116 </z2-m>
    </axis>
  </animation>

</PropertyList>

